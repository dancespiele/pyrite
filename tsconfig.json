{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": ["dom", "es2015"],
		"strict": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"declaration": true,
		"jsx": "react",
		"jsxFactory": "Render",
		"outDir": "./lib",
		"rootDir": ".",
		"sourceMap": true
	},
	"include": [
		"./src"
	],
	"exclude": [
		"node_modules",
		"lib",
		"public"
	]
}